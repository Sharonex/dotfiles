    "version": "2.0.0",
    "tasks": [
        {
            "label": "weka-file",
            "type": "shell",
            "command": "cd ${workspaceFolder} && WLDC_AUTOINSTALL=1 ./scripts/build/wldc -o- ${file}",
        "problemMatcher": [
            {
                "owner": "weka",
                "source": "weka",
                "pattern": [
                {
                    "file": 1,
                    "line": 2,
                    "message": 3,
                    "regexp": "^([^()]+)\((\\d+)\): (.+)$"
                }
                ]
            }
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "weka-unittest",
            "type": "shell",
            "command": "cd ${workspaceFolder} && WLDC_AUTOINSTALL=1 ./scripts/build/wldc -o- ${file} --unittest",
            "problemMatcher": [
                {
                    "owner": "weka",
                    "source": "weka",
                    "pattern": [
                    {
                        "file": 1,
                        "line": 2,
                        "message": 3,
                        "regexp": "^([^()]+)\((\\d+)\): (.+)$"
                    }
                    ]
                }
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "git-mediate",
            "type": "shell",
            "command": "git-mediate -d",
            "problemMatcher": [
                {
                    "owner": "weka",
                    "source": "weka",
                    "pattern": [ {
                        "file": 1,
                        "line": 2,
                        "side": 3,
                        "commit": 4,
                        "message": 5,
                        "regexp": "^(.+):([0-9]+):(Diff[A,B]): >* ([a-z,0-9]*) \((.+)\)$"
                    }
                    ]
                }
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
